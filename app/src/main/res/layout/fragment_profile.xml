<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_dark" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/img_avatar"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="N/A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:textSize="13sp"
            android:textColor="@color/white_60"
            android:text="Level 1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            android:textStyle="bold"
            android:text="Username" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edit_text"
            android:paddingLeft="8dp"
            android:paddingVertical="16dp">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_user" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_60"
                android:textSize="13sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:text="N/A" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:textStyle="bold"
            android:text="Email" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edit_text"
            android:paddingLeft="8dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_email" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_60"
                android:textSize="13sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:text="N/A" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:textStyle="bold"
            android:text="Menu" />

        <LinearLayout
            android:id="@+id/ll_voucherku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edit_text"
            android:paddingLeft="8dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_voucher" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white_60"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:text="Voucherku" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_arrow_right"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_riwayat_aktivitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edit_text"
            android:paddingLeft="8dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_activity_blue" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white_60"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:text="Riwayat Aktivitas" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_arrow_right"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_berlangganan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edit_text"
            android:paddingLeft="8dp"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_bolt" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white_60"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:text="Berlangganan" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_arrow_right"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_signout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edit_text"
            android:paddingLeft="8dp"
            android:paddingVertical="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white_60"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:text="Keluar" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_sign_out"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="13dp"/>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</ScrollView>